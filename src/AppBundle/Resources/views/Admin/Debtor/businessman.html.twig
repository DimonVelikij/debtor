<div class="box box-primary">
    <div class="box-header">
        <p class="box-title">Индивидуальный предприниматель</p>
        <div class="form-group" ng-class="{'has-error': debtor.name.$invalid && debtor.name.$dirty}">
            <label for="name" class="control-label required">ФИО</label>
            <input name="name" id="name" type="text" class="form-control" ng-model="formData.name" required>
            <div class="help-block sonata-ba-field-error-messages" ng-if="debtor.name.$invalid && debtor.name.$dirty" ng-messages="debtor.name.$error">
                <ul class="list-unstyled">
                    <li ng-message="required"><i class="fa fa-exclamation-circle"></i>Укажите ФИО</li>
                    <li ng-message="backend"><i class="fa fa-exclamation-circle"></i>[[ debtor.name.errorMessages.backend ]]</li>
                </ul>
            </div>
        </div>
        <div class="form-group">
            <label for="ogrnip" class="control-label">ОГРНИП</label>
            <input name="ogrnip" id="ogrnip" type="text" class="form-control" ng-model="formData.ogrnip">
        </div>
        <div class="form-group">
            <label for="inn" class="control-label">ИНН</label>
            <input name="inn" id="inn" type="text" class="form-control" ng-model="formData.inn">
        </div>
        {#статус#}
        <div class="form-group" ng-class="{'has-error': debtor.location.$invalid && debtor.location.$dirty}">
            <label for="location" class="control-label required">Место жительства</label>
            <input name="location" id="location" type="text" class="form-control" ng-model="formData.location" required backend>
            <div class="help-block sonata-ba-field-error-messages" ng-if="debtor.location.$invalid && debtor.location.$dirty" ng-messages="debtor.location.$error">
                <ul class="list-unstyled">
                    <li ng-message="required"><i class="fa fa-exclamation-circle"></i>Укажите адрес местонаждения</li>
                    <li ng-message="backend"><i class="fa fa-exclamation-circle"></i>[[ debtor.location.errorMessages.backend ]]</li>
                </ul>
            </div>
        </div>
        {% include '@App/Admin/Debtor/phone_field.html.twig' %}
        {% include '@App/Admin/Debtor/email_field.html.twig' %}
    </div>
</div>