<div class="col-md-12">
    <div class="sonata-ba-collapsed-fields">
        <div ng-show="subscribers.length">
            <table class="table table-bordered table-striped sonata-ba-list">
                <thead>
                    <tr class="sonata-ba-list-field-header">
                        <th>ФИО</th>
                        <th>Телефон</th>
                        <th>E-mail</th>
                        <th>Дата заполнения</th>
                        <th>Сумма долга, руб</th>
                        <th>Сумма пени, руб</th>
                        <th>Действия</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat-start="subscriber in subscribers" style="background-color: #befab4">
                        <td>[[ subscriber.name ]]</td>
                        <td>[[ subscriber.phone ]]</td>
                        <td>[[ subscriber.email ]]</td>
                        <td>[[ subscriber.dateDebt | date ]]</td>
                        <td>[[ subscriber.sumDebt ]]</td>
                        <td>[[ subscriber.sumFine ]]</td>
                        <td>
                            <a class="btn btn-success" ng-click="subscriber.isShow = !subscriber.isShow" ng-hide="subscriber.isShow"><i class="fa fa-eye"></i> Показать</a>
                            <a class="btn btn-success" ng-click="subscriber.isShow = !subscriber.isShow" ng-show="subscriber.isShow"><i class="fa fa-eye"></i> Скрыть</a>
                            <a class="btn btn-success" ng-click="openSubscriberForm(subscriber)"><i class="fa fa-pencil"></i> Редактировать</a>
                        </td>
                    </tr>
                    <tr ng-repeat-end ng-show="subscriber.isShow" style="background-color: #befab4">
                        <td colspan="7">
                            <p>ФИО: <strong>[[ subscriber.name ]]</strong></p>
                            <p>Телефон: <strong>[[ subscriber.phone ]]</strong></p>
                            <p>E-mail: <strong>[[ subscriber.email ]]</strong></p>
                            <p>Дата заполнения: <strong>[[ subscriber.dateDebt | date ]]</strong></p>
                            <p>Сумма долга: <strong>[[ subscriber.sumDebt ]]</strong> руб</p>
                            <p>Сумма пени: <strong>[[ subscriber.sumFine ]]</strong> руб</p>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div style="margin-bottom: 20px">
            <p ng-hide="subscribers.length">Список абонентов пуст</p>
            {% include '@App/Admin/Flat/Subscriber/subscriber_form.html.twig' %}
        </div>
    </div>
</div>