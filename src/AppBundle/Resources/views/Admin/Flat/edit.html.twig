{% extends 'SonataAdminBundle:CRUD:edit.html.twig' %}

{% block form %}
    {{ parent() }}

    {% if object.id %}
        <div ng-controller="DebtorCtrl" ng-cloak>
            <script type="text/ng-init" name="Path">{{ {
                    AdminDebtors: path('admin_app_flat_debtors')
                } |json_encode | raw }}</script>
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h4 class="box-title">Должники</h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <table class="table table-bordered table-striped sonata-ba-list">
                                            <thead>
                                                <tr class="sonata-ba-list-field-header">
                                                    <th>ФИО</th>
                                                    <th>Статус</th>
                                                    <th>Телефон</th>
                                                    <th>Действия</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr ng-repeat-start="debtor in debtors">
                                                    <td>[[ debtor.name ]]</td>
                                                    <td>[[ debtor.status ]]</td>
                                                    <td>[[ debtor.phone ]]</td>
                                                    <td>
                                                        <a class="btn btn-success" ng-click="toggleDebtorInfo(debtor)"><i class="fa fa-eye"></i> Показать</a>
                                                        <a class="btn btn-success"><i class="fa fa-pencil"></i> Редактировать</a>
                                                        <a class="btn btn-danger"><i class="fa fa-minus-circle"></i> Удалить</a>
                                                    </td>
                                                </tr>
                                                <tr ng-repeat-end ng-show="isShowDebtorInfo(debtor)" style="background-color: #c9e2b3">
                                                    <td colspan="4">
                                                        <p><strong>ФИО: </strong>[[ debtor.name ]]</p>
                                                        <p><strong>Статус: </strong>[[ debtor.status ]]</p>
                                                        <p><strong>Телефон: </strong>[[ debtor.phone ]]</p>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <a href>Добавить должника</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="box box-primary">
                                <div class="box-header">
                                    <h4 class="box-title">События</h4>
                                </div>
                                <div class="box-body">
                                    <div class="sonata-ba-collapsed-fields">
                                        <ul>
                                            <li>Событие 1</li>
                                            <li>Событие 2</li>
                                            <li>Событие 3</li>
                                            <li>Событие 4</li>
                                            <li>Событие 5</li>
                                            <li>Событие 6</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {% javascripts
            '@cms_flat'
        %}
            <script type="text/javascript" src="{{ asset(asset_url, 'js') }}"></script>
        {% endjavascripts %}
    {% endif %}
{% endblock %}
